{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Solid Client",
  "version": "0.0.1",
  "identifier": "pro.tricko.solid",
  "build": {
    "beforeDevCommand": "npm run build",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "create": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "solid"
        ]
      }
    }
  },
  "bundle": {
    "publisher": "robertpakalns",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/icon.ico",
      "icons/icon.icns"
    ]
  }
}